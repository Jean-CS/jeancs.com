@import '../_main'
@import '../partials/_social-icons'

.post__container
  width: 34rem
  max-width: 100%
  margin: 0 auto
  padding-bottom: 4rem

.post__title 
  margin-top: 0
  margin-bottom: 0.5rem

.post__date
  color: $grey
  font-size: 0.8rem

p code
  display: inline-block 

  &:before,
  &:after
    content: '`'

pre
  border: 1px solid #e7e7e7
  border-radius: 2px
  margin: 1.5rem auto 0
  padding: 1rem
  overflow-x: auto
  white-space: pre

  code
    font-size: 12px

    @media screen and (min-width: $tabletWidth)
      font-size: 13px

blockquote
  width: 95%
  margin: 0 auto
  font-size: 1rem

p a
  font-weight: 400
  color: $black

img
  width: 100%
  max-width: 500px
  margin: 0 auto
  display: block

.cp_embed_wrapper 
  margin-top: 1.5rem

.codepen__caption
  display: block
  width: 75%
  margin: 0.5rem auto 0
  color: #9b9b9b
  font-size: .8rem
  font-weight: 300
  text-align: center

/* overrides */

.social-icons
  justify-content: center
  padding: 0 0 4rem

.progress
  background: linear-gradient(to right, $primary var(--scroll), transparent 0);
  background-repeat: no-repeat;
  position: fixed;
  width: 100%;
  height: 2px;
  z-index: 3;